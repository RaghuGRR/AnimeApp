<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/ivAnimeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvAnimeTitle"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAnimeEpisodes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAnimeImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:text="Shingeki no Kyojin Season 3 Part 2 fjhcgtckyctkyckuycjokuyuouycjoukcjolu" />

    <TextView
        android:id="@+id/tvAnimeEpisodes"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAnimeRating"
        app:layout_constraintStart_toEndOf="@id/ivAnimeImage"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimeTitle"
        app:layout_constraintVertical_bias="0.5"
        tools:text="11 Episodes" />

    <TextView
        android:id="@+id/tvAnimeRating"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAnimeImage"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimeEpisodes"
        app:layout_constraintVertical_bias="0.5"
        tools:text="9.35 Rating" />
</androidx.constraintlayout.widget.ConstraintLayout>